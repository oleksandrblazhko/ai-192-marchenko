@startuml Deployment

left to right direction
skinparam componentStyle uml1

node "<<Desktop>>" as dk {
    node "<<Operating System>>" {
        node "<<Web Browser>>" {
            component [*.php]
        }
    }
    interface Keyboard
    interface Mouse

    Keyboard -- dk
    Mouse -- dk
}

node "<<Server>>" as server {
    node "<<Operating System Linux>>" as os {
        node "<<Web Server>>" {
            component [Yii2 Framework]
        }
        node "<<Database Server>>" {
            database "MySQL Database"
        }
    }
}

dk -- server

@enduml
